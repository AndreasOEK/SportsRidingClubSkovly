@using BootstrapBlazor.Components;
@using SportsRidingClubSkovly.Web.Components.Component.SessionDetails;

@inherits SessionDetailsBase

@page "/Session/{sessionId:guid}"
@rendermode InteractiveServer

<PageTitle>Session Details</PageTitle>
<div class="row row-cols-1 row-cols-md-2">
    <div class="col-md-3">
        <h3>Session Details</h3>
    </div>
    <div class="col-md-9">
        <ul class="nav nav-pills justify-content-end">
            <li class="nav-item">
                <button type="button"
                        class="btn btn-primary btn-sm"
                        onclick="@ToggleEditMode">
                    Edit
                </button>
            </li>
        </ul>
    </div>

</div>


@if (Session is null)
{
    <p>Loading</p>
}
else
{
    <div class="card border-success text-center">
        <SessionDetailsGeneralInformation Session=@Session IsEditMode=@IsEditMode ValuesUpdated="ValuesChanged"/>
        <SessionDetailsSpecifics Session=@Session />
        <SessionDetailsBookingInformation Session=@Session />
    </div>
}
